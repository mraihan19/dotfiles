{
    // Workbench

    "workbench.colorTheme": "Cobalt Next Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#7158df91",
        "editor.selectionHighlightBackground": "#000000",
        "editor.wordHighlightBackground": "#7854"
    },
    "workbench.editor.highlightModifiedTabs": true,

    // Editor

    "editor.acceptSuggestionOnEnter": "smart",
    "editor.rulers": [
        150
        ],
    "editor.fontFamily": "Fira code",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight":"500",
    "editor.lineHeight": 22,
    "editor.letterSpacing": 0.5,
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 2,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.cursorWidth": 3,
    "editor.formatOnSave": true,
    "editor.inlineHints.enabled": true,
    "editor.inlineHints.fontFamily": "Fira code",
    "editor.minimap.renderCharacters": false,
    "editor.tokenColorCustomizations": {
        "comments": "#00FF00",
        "textMateRules": [{
            "scope":[
                "entity.name.function",
                "entity.name.method",
            ],
            "settings": {
                "fontStyle": "bold"
            }
        }]
    },

    // Miscellaneous

    "python.languageServer": "Pylance",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",


    // Window

    "window.title":"${dirty} ${activeEditorMedium}${separator}${rootName}",

    // File

    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Terminal

    "terminal.integrated.fontFamily": "Source code pro",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "400",
    "editor.suggestSelection": "first",

    // Extension

    "prettier.singleQuote":true,
    "prettier.eslintIntegration":true,
    "prettier.tabWidth": 2,
    "window.zoomLevel": 2

}